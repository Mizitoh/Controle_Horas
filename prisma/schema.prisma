generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Grupo {
  id             Int             @id @default(autoincrement())
  nome           String          @unique
  controle_horas ControleHoras[]
  usuario_grupo  usuario_grupo[]

  @@map("grupo")
}

model Usuario {
  id             Int             @id @default(autoincrement())
  nome           String
  email          String          @unique @db.VarChar(255)
  senha          String
  controle_horas ControleHoras[]
  usuario_grupo  usuario_grupo[]

  @@map("usuario")
}

model ControleHoras {
  id          Int      @id @default(autoincrement())
  id_usuario  Int
  data        DateTime @db.Date
  horaInicial DateTime @db.Time(6)
  horaFinal   DateTime @db.Time(6)
  id_grupo    Int?
  grupo       Grupo?   @relation(fields: [id_grupo], references: [id], onDelete: NoAction, onUpdate: NoAction)
  usuario     Usuario  @relation(fields: [id_usuario], references: [id])

  @@map("controle_horas")
}

model usuario_grupo {
  usuario_id Int
  grupo_id   Int
  grupo      Grupo   @relation(fields: [grupo_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  usuario    Usuario @relation(fields: [usuario_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@id([usuario_id, grupo_id])
  @@map("usuario_grupo")
}
